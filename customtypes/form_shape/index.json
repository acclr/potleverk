{
  "format": "custom",
  "id": "form_shape",
  "label": "Form Shape",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "preamble": {
        "type": "Text",
        "config": {
          "label": "Preamble",
          "placeholder": ""
        }
      },
      "type": {
        "type": "Select",
        "config": {
          "label": "Form Action",
          "placeholder": "",
          "options": ["collect", "email"]
        }
      },
      "submit_text": {
        "type": "Text",
        "config": {
          "label": "Submit Text",
          "placeholder": "Submit button text."
        }
      },
      "submitting_text": {
        "type": "Text",
        "config": {
          "label": "Submitting Text",
          "placeholder": "Button text while the form is sending."
        }
      },
      "submitted_text": {
        "type": "Text",
        "config": {
          "label": "Submitted Text",
          "placeholder": "Text displayed briefly after form was sent."
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "form_switch": {
              "type": "SharedSlice"
            },
            "form_textarea": {
              "type": "SharedSlice"
            },
            "form_options": {
              "type": "SharedSlice"
            },
            "form_number": {
              "type": "SharedSlice"
            },
            "form_input": {
              "type": "SharedSlice"
            }
          }
        }
      }
    }
  }
}
